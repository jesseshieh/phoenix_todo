<%= Enum.map @todos, fn t -> %>
  <%= link to: todo_path(@conn, :show, t) do %>
    <div class="todo box-shadow blue">
      <%= t.description %>
    </div>
  <% end %>
<% end %>

<%= form_for @changeset, todo_path(@conn, :create), fn f -> %>
  <div class="new-form">
    <%= text_input f, :description, placeholder: "Description" %>
    <%= error_tag f, :description %>
    <%= submit "Add Todo" %>
  </div>
<% end %>
